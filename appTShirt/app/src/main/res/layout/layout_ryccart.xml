<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Spacer for top margin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <!-- CardView container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="10dp">

        <!-- Content inside CardView -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dialog_background1"
            android:padding="10dp">

            <!-- Name TextView -->
            <TextView
                android:id="@+id/namecart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textAlignment="center"
                android:textSize="18sp"/>

            <!-- Size TextView -->
            <TextView
                android:id="@+id/sizecart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/namecart"
                android:layout_marginTop="10dp"
                android:text="Size"
                android:textAlignment="center"
                android:textSize="18sp"/>

            <!-- Quantity TextView -->
            <TextView
                android:id="@+id/quaicart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sizecart"
                android:layout_marginTop="10dp"
                android:text="Quantity"
                android:textAlignment="center"
                android:textSize="18sp"/>

            <!-- Price TextView -->
            <TextView
                android:id="@+id/pricecart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/quaicart"
                android:layout_marginTop="10dp"
                android:text="Price"
                android:textAlignment="center"
                android:textSize="18sp"/>

            <!-- Selection CheckBox -->
            <CheckBox
                android:id="@+id/seleccart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
